# MongoDB Connection
MONGODB_URI=your_mongodb_connection_string_here

# UploadThing (Image Uploads)
UPLOADTHING_APP_ID=your_uploadthing_app_id
UPLOADTHING_SECRET=your_uploadthing_secret

# Pusher (Real-time messaging)
PUSHER_APP_ID=your_pusher_app_id
PUSHER_KEY=your_pusher_key
PUSHER_SECRET=your_pusher_secret
PUSHER_CLUSTER=your_pusher_cluster

# Pusher (Client-side)
NEXT_PUBLIC_PUSHER_KEY=your_pusher_key
NEXT_PUBLIC_PUSHER_CLUSTER=your_pusher_cluster

# Site URL (for metadata and OG images)
# Note: Canonical URL is always https://globalchatroom.vercel.app for SEO
# This variable is used for the current deployment's base URL
NEXT_PUBLIC_SITE_URL=https://globalchatroom.vercel.app
